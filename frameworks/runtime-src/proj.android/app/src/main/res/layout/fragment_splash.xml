<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <ImageView android:layout_width="match_parent"
               android:src="@drawable/icon_splash"
               android:scaleType="fitXY"
               android:layout_height="match_parent"/>

    <triangle.little.potatoes.presentation.view.widget.SimpleButton
            android:id="@+id/sb_skip"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            app:sb_text="跳过 3"
            app:sb_auto_check="false"
            app:sb_bg_color="#aaFF4081"
            app:sb_border_color="#aaFF4081"
            app:sb_shape="arc"
            android:visibility="gone"
            app:sb_text_color="@android:color/white"/>

</FrameLayout>