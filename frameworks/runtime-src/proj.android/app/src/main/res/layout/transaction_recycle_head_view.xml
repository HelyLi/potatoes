<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:background="@color/color_f5f5f5"
              android:layout_height="180dp">

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_marginTop="12dp"
                  android:background="@color/color_fff"
                  android:layout_marginBottom="12dp"
                  android:layout_height="116dp">
        <TextView
                android:id="@id/account"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:textSize="@dimen/text_size_16"
                android:layout_height="0dp"/>
        <TextView
                android:id="@+id/account_money"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size_16"
                android:paddingLeft="16dp"
                android:layout_height="0dp"/>
        <TextView
                android:id="@+id/transaction_time"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_16"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:layout_height="0dp"/>
    </LinearLayout>

    <RelativeLayout android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:background="@color/color_e9e9e9"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_height="40dp">

        <TextView android:layout_width="wrap_content"
                  android:gravity="center"
                  android:text="@string/home_transaction_time"
                  style="@style/Theme.Partner.Text.dark.16"
                  android:layout_height="match_parent"/>
        <TextView android:layout_width="wrap_content"
                  android:gravity="center"
                  android:layout_centerInParent="true"
                  android:text="@string/home_transaction_type"
                  style="@style/Theme.Partner.Text.dark.16"
                  android:layout_height="match_parent"/>
        <TextView android:layout_width="wrap_content"
                  android:gravity="center"
                  android:layout_alignParentRight="true"
                  android:text="@string/home_transaction_money"
                  style="@style/Theme.Partner.Text.dark.16"
                  android:layout_height="match_parent"/>


    </RelativeLayout>

</LinearLayout>



