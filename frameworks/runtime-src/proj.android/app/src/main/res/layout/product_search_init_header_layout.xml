<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/color_fff"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            style="@style/Theme.Partner.Text.dark.14"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="@string/partner_product_history_search"/>

        <TextView
            android:id="@+id/search_clear_tv"
            style="@style/Theme.Partner.Text.gray.12"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_search_clear"
            android:drawablePadding="4dp"
            android:text="@string/partner_product_search_clear"/>

    </RelativeLayout>

    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/record_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_fff"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"/>

    <TextView
        android:id="@+id/search_record_empty_tv"
        style="@style/Theme.Partner.Text.gray.14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@color/color_fff"
        android:gravity="center"
        android:text="@string/partner_product_record_search_empty"/>

    <TextView
        style="@style/Theme.Partner.Text.dark.14"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_fff"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="@string/partner_product_private_proxy"/>

    <include layout="@layout/widget_divide"/>

    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/private_proxy_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_fff"
        android:padding="15dp"/>

    <TextView
        style="@style/Theme.Partner.Text.dark.14"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_fff"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="@string/partner_product_hot"/>

    <include layout="@layout/widget_divide"/>
</LinearLayout>