<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:background="@color/color_f5f5f5"
              android:orientation="vertical"
              android:layout_height="match_parent"
>


    <TextView android:layout_width="wrap_content"
              android:gravity="center_vertical"
              android:text="@string/home_property_withdraw_account"
              android:textSize="@dimen/text_size_14"
              android:textColor="@color/color_A8A8A8"
              android:paddingLeft="15dp"
              android:paddingStart="15dp"
              android:layout_height="41dp"/>

    <TextView
            android:id="@+id/bank_tv"
            android:layout_width="match_parent"
            android:text="@string/home_property_withdraw_money"
            style="@style/Theme.Partner.Text.dark.16"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="35dp"
            android:background="@color/color_fff"
            android:visibility="gone"
            android:drawableRight="@drawable/ic_select_bank_card"
            android:layout_height="51dp"/>

    <View android:layout_width="match_parent"
          android:background="@color/color_e9e9e9"
          android:layout_height="1px"/>

    <TextView
            android:id="@+id/select_new_bank_tv"
            android:layout_width="match_parent"
            android:text="@string/home_property_select_bank_new"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingStart="15dp"
            android:background="@color/color_fff"
            style="@style/Theme.Partner.Text.dark.16"
            android:layout_height="51dp"/>

</LinearLayout>