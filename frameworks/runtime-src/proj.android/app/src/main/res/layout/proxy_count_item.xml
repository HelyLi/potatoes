<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:background="@drawable/bg_white_and_gray_selector"
>

    <TextView
            android:id="@+id/item_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/color_1B1D2A"/>

    <ImageView
            android:id="@+id/item_iv"
            android:layout_width="9dp"
            android:layout_height="15dp"
            android:layout_marginTop="@dimen/tab_margin_top"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_personal_arrow_right"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@null"/>


    <!--<include layout="@layout/widget_notify"/>-->

</RelativeLayout>