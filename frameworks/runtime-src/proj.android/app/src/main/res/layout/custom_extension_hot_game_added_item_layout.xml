<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="?android:selectableItemBackground"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="76dp"
        android:layout_height="76dp">

        <triangle.little.potatoes.presentation.view.widget.RoundImageView
            android:id="@+id/game_logo_img"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:src="@drawable/ic_product_action_game_loading"/>

        <LinearLayout
            android:id="@+id/delete_state_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/delete_img"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/bg_dark_top_round"
                android:scaleType="center"
                android:src="@drawable/ic_search_clear"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/cancel_tv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/bg_dark_bottom_round"
                android:gravity="center"
                android:text="@string/partner_cancel"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/sp_14"
                android:visibility="invisible"/>
        </LinearLayout>
    </FrameLayout>


    <TextView
        android:id="@+id/game_name_tv"
        style="@style/Theme.Partner.Text.dark.14"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="1"/>
</LinearLayout>