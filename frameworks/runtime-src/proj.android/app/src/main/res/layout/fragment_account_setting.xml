<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/widget_toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_white_and_gray_selector"
        android:padding="20dp">

        <TextView
            style="@style/Theme.Partner.Text.dark.16"
            android:drawablePadding="15dp"
            android:gravity="center_vertical"
            android:text="@string/partner_personal_account_login"/>

        <TextView
            android:id="@+id/login_account_tv"
            style="@style/Theme.Partner.Text.gray.14"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="15dp"
            android:gravity="center_vertical"/>
    </RelativeLayout>

    <include layout="@layout/widget_divide"/>

    <RelativeLayout
        android:id="@+id/modify_psw_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_and_gray_selector"
        android:padding="20dp">

        <TextView
            style="@style/Theme.Partner.Text.dark.16"
            android:drawablePadding="15dp"
            android:gravity="center_vertical"
            android:text="@string/partner_personal_account_modify_psw"/>

        <TextView
            style="@style/Theme.Partner.Text.gray.14"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="15dp"
            android:drawableRight="@drawable/ic_personal_arrow_right"
            android:gravity="center_vertical"/>
    </RelativeLayout>

    <include layout="@layout/widget_divide"/>

    <RelativeLayout
        android:id="@+id/pay_psw_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_and_gray_selector"
        android:padding="20dp">

        <TextView
            style="@style/Theme.Partner.Text.dark.16"
            android:drawablePadding="15dp"
            android:gravity="center_vertical"
            android:text="@string/partner_personal_account_pay_psw"/>

        <TextView
            style="@style/Theme.Partner.Text.gray.14"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="15dp"
            android:drawableRight="@drawable/ic_personal_arrow_right"
            android:gravity="center_vertical"/>
    </RelativeLayout>

    <include layout="@layout/widget_divide"/>

    <TextView
        android:id="@+id/exit_tv"
        style="@style/Theme.Partner.Text.blue.16"
        android:layout_width="match_parent"
        android:background="@drawable/bg_white_and_gray_selector"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:padding="15dp"
        android:text="@string/partner_personal_account_exit"/>
</LinearLayout>