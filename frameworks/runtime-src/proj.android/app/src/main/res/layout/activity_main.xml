<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <triangle.little.potatoes.presentation.view.widget.FFragmentTabHost
        android:id="@+id/tab_host"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:visibility="gone"/>

            <triangle.little.potatoes.presentation.view.widget.BottomBar
                android:id="@+id/tab_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/main_tab_height"
                android:layout_alignParentBottom="true"
                android:background="@drawable/background_with_divide_top"/>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/tab_bar"/>

        </RelativeLayout>


    </triangle.little.potatoes.presentation.view.widget.FFragmentTabHost>


</merge>