<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/big_game_logo_img"
        android:layout_width="match_parent"
        android:layout_height="188dp"
        android:src="@drawable/ic_action_banner_loading"
        android:scaleType="fitXY"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp">

        <triangle.little.potatoes.presentation.view.widget.RoundImageView
            android:id="@+id/game_logo_img"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/ic_product_action_game_loading"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/game_name_tv"
            style="@style/Theme.Partner.Text.dark.16"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/game_logo_img"/>

        <TextView
            android:id="@+id/proxy_num_tv"
            style="@style/Theme.Partner.Text.gray.10"
            android:layout_alignLeft="@+id/game_name_tv"
            android:layout_below="@+id/game_name_tv"
            android:layout_marginTop="6dp"/>

        <TextView
            android:id="@+id/proportion_tv"
            style="@style/Theme.Partner.Text.blue.12"
            android:layout_alignLeft="@+id/proxy_num_tv"
            android:layout_below="@+id/proxy_num_tv"
            android:layout_marginTop="13dp"
            android:text="@string/partner_product_divide_ratio"/>

        <Button
            android:id="@+id/generalize_btn"
            android:layout_width="61dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_blue_fifteen_round"
            android:gravity="center"
            android:text="@string/partner_product_generalize"
            android:textColor="@color/color_fff"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/color_f5f5f5"/>

    <TextView
        style="@style/Theme.Partner.Text.dark.16"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:gravity="center"
        android:text="@string/partner_product_proxy_ranking_list"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:background="@color/color_f5f5f5"
        android:gravity="center_vertical">

        <TextView
            style="@style/Theme.Partner.Text.gray.14"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/partner_product_proxy_account"/>

        <TextView
            style="@style/Theme.Partner.Text.gray.14"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/partner_product_proxy_amount"/>

        <TextView
            style="@style/Theme.Partner.Text.gray.14"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/partner_product_proxy_ranking"/>
    </LinearLayout>
</LinearLayout>