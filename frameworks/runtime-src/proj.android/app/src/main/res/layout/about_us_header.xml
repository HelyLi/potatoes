<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_fff"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="15dp">

        <ImageView
            android:id="@+id/logo_img"
            android:layout_width="101dp"
            android:layout_height="101dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_about_us_logo"/>

        <TextView
            style="@style/Theme.Partner.Text.blue.18"
            android:layout_marginTop="12dp"
            android:text="@string/partner_personal_us_llhy"/>

        <TextView
            android:id="@+id/version_tv"
            style="@style/Theme.Partner.Text.gray.12"/>
    </LinearLayout>

    <TextView
        android:id="@+id/check_version_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_white_and_gray_selector"
        android:padding="15dp"
        android:text="@string/partner_personal_us_check_version"
        android:textColor="@color/color_1B1D2A"
        android:textSize="@dimen/text_size_16"/>

</LinearLayout>