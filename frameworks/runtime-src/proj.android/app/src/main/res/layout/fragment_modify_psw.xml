<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/widget_toolbar"/>

    <EditText
        android:id="@+id/old_psw_edit"
        style="@style/Theme.Partner.Text.dark.16"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="@color/color_fff"
        android:gravity="center_vertical"
        android:hint="@string/partner_personal_account_input_old_psw"
        android:inputType="textPassword"
        android:maxLength="20"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColorHint="@color/color_A8A8A8"/>

    <include layout="@layout/widget_divide"/>

    <EditText
        android:id="@+id/new_psw_edit"
        style="@style/Theme.Partner.Text.dark.16"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_fff"
        android:gravity="center_vertical"
        android:hint="@string/partner_personal_account_new_psw"
        android:inputType="textPassword"
        android:maxLength="20"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColorHint="@color/color_A8A8A8"/>

    <include layout="@layout/widget_divide"/>

    <EditText
        android:id="@+id/confirm_psw_edit"
        style="@style/Theme.Partner.Text.dark.16"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_fff"
        android:gravity="center_vertical"
        android:hint="@string/partner_personal_account_confirm_psw"
        android:inputType="textPassword"
        android:maxLength="20"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColorHint="@color/color_A8A8A8"/>

    <Button
        android:id="@+id/confirm_modify_btn"
        style="@style/Widget.Partner.Login_Btn"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="12dp"
        android:text="@string/partner_personal_account_confirm_modify"/>
</LinearLayout>