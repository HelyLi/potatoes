<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:background="@color/color_fff"
              android:layout_height="wrap_content">

    <TextView android:layout_width="match_parent"
              android:background="@color/color_f5f5f5"
              android:layout_height="@dimen/dp_12"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/dp_15"
            android:paddingStart="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15"
            android:orientation="horizontal"
            android:background="@color/color_e9e9e9"
            android:layout_height="41dp">

        <TextView
                android:id="@+id/register_time_tv"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/color_1B1D2A"
                android:layout_height="match_parent"/>
        <TextView
                android:id="@+id/account_tv"
                android:layout_width="0dp"
                android:gravity="center"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/color_1B1D2A"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
        <TextView
                android:id="@+id/money_tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/color_1B1D2A"
                android:layout_height="match_parent"/>


    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/dp_15"
            android:paddingStart="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15"
            android:layout_height="50dp">

        <TextView
                android:id="@+id/register_time"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/text_size_14"
                android:layout_height="match_parent"/>
        <TextView
                android:id="@+id/account"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/text_size_14"
                android:layout_height="match_parent"/>
        <TextView
                android:id="@+id/money"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/color_A8A8A8"
                android:layout_height="match_parent"/>

    </LinearLayout>

</LinearLayout>



