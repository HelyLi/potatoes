<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/newest_game_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="?android:attr/selectableItemBackground"
              android:orientation="vertical">

    <triangle.little.potatoes.presentation.view.widget.RoundImageView
        android:id="@+id/game_logo_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/game_name_tv"
        style="@style/Theme.Partner.Text.dark.14"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/game_type_tv"
            style="@style/Theme.Partner.Text.blue.12"
            android:text="@string/partner_product_android_game"/>

        <TextView
            android:id="@+id/proxy_num_tv"
            style="@style/Theme.Partner.Text.gray.12"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/ic_product_population"
            android:drawablePadding="5dp"
            android:ellipsize="end"
            android:maxLines="1"/>
    </LinearLayout>
</LinearLayout>