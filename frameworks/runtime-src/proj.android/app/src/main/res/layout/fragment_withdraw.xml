<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:background="@color/color_f5f5f5"
             android:paddingTop="15dp"
             android:paddingLeft="15dp"
             android:paddingRight="15dp"
             android:layout_height="match_parent"
>

    <LinearLayout android:layout_width="match_parent"
                  android:background="@color/color_fff"
                  android:orientation="vertical"
                  android:paddingBottom="24dp"
                  android:layout_height="wrap_content">


        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:background="@color/color_e9e9e9"
                      android:layout_height="41dp">

            <TextView android:layout_width="wrap_content"
                      android:gravity="center_vertical"
                      android:layout_marginLeft="15dp"
                      android:layout_marginStart="15dp"
                      android:text="@string/home_property_withdraw_account"
                      style="@style/Theme.Partner.Text.dark.14"
                      android:layout_height="match_parent"/>

            <TextView
                    android:id="@+id/bank_name_tv"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="25dp"
                    android:layout_marginStart="25dp"
                    android:text="@string/home_property_withdraw_no_bank"
                    style="@style/Theme.Partner.Text.blue.14"
                    android:layout_height="match_parent"/>
        </LinearLayout>

        <TextView android:layout_width="wrap_content"
                  android:layout_marginTop="15dp"
                  android:layout_marginLeft="15dp"
                  android:layout_marginStart="15dp"
                  android:text="@string/home_property_withdraw_money"
                  style="@style/Theme.Partner.Text.dark.14"
                  android:layout_height="wrap_content"/>

        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="40dp">

            <EditText
                    android:id="@+id/withdraw_money_et"
                    android:layout_width="match_parent"
                    android:paddingLeft="40dp"
                    android:paddingStart="40dp"
                    android:background="@null"
                    android:inputType="numberDecimal"
                    android:layout_height="match_parent"/>

            <TextView
                    android:id="@+id/rmb_tv"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:gravity="center_vertical"
                    style="@style/Theme.Partner.Text.dark.18"
                    android:layout_height="match_parent"/>
        </RelativeLayout>
        <View android:layout_width="match_parent"
              android:background="@color/color_e9e9e9"
              android:layout_height="1px"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_marginTop="15dp"
                  android:layout_marginLeft="15dp"
                  android:layout_marginStart="15dp"
                  android:text="@string/home_property_withdraw_password"
                  style="@style/Theme.Partner.Text.dark.14"
                  android:layout_height="wrap_content"/>

        <EditText
                android:id="@+id/withdraw_pwd_et"
                android:layout_width="match_parent"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:background="@null"
                android:inputType="textPassword"
                android:layout_height="40dp"/>
        <View android:layout_width="match_parent"
              android:background="@color/color_e9e9e9"
              android:layout_height="1px"/>

        <TextView
                android:id="@+id/can_withdraw_money"
                android:layout_width="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:textSize="@dimen/text_size_14"
                android:layout_height="wrap_content"/>

        <Button
                android:id="@+id/withdraw_btn"
                android:layout_width="match_parent"
                android:layout_marginTop="23dp"
                android:textSize="18sp"
                android:background="@drawable/btn_my_assets_selector"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:textColor="@color/color_fff"
                android:text="@string/home_property_withdraw_now"
                android:layout_height="50dp"/>

        <TextView
                android:id="@+id/withdraw_description"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                style="@style/Theme.Partner.Text.gray.12"
                android:layout_height="wrap_content"/>

    </LinearLayout>
</FrameLayout>