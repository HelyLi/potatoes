<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:background="@drawable/bg_white_and_gray_selector"
>

    <TextView
            android:id="@+id/type_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_centerVertical="true"
            style="@style/Theme.Partner.Text.dark.16"
    />

    <TextView
            android:id="@+id/item_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            style="@style/Theme.Partner.Text.dark.16"
            android:drawableRight="@drawable/ic_personal_arrow_right"
            android:drawablePadding="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:text="@string/home_rebate_select_type"
            android:layout_centerHorizontal="true"
    />

    <TextView android:layout_width="match_parent"
              android:layout_alignParentBottom="true"
              android:background="@color/color_e9e9e9"
              android:layout_marginLeft="15dp"
              android:layout_height="1px"/>


    <!--<include layout="@layout/widget_notify"/>-->

</RelativeLayout>