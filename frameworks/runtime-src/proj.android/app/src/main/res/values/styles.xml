<resources>

    <style name="Theme.Partner.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="title_bar_height">@dimen/toolbar_height</item>
        <item name="toolbarBackground">@color/color_1B1D2A</item>
        <item name="divideBackground">@color/color_e9e9e9</item>
    </style>

    <style name="Theme.Partner" parent="Theme.Partner.Base"/>

    <style name="Theme.Partner.ToolbarWhite" parent="Widget.AppCompat.Toolbar">
        <item name="actionMenuTextColor">@color/color_fff</item>
        <item name="actionMenuTextAppearance">@style/Theme.Partner.Toolbar.TextAppearance</item>
    </style>

    <style name="Theme.Partner.Toolbar.TextAppearance" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>
    <!--启动页样式-->
    <style name="Theme.Partner.Splash.Base" parent="Theme.Partner">
        <item name="android:windowFullscreen">true</item>
        <!--<item name="android:windowBackground">@drawable/ic_start_logo</item>-->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/fade</item>
    </style>

    <style name="Theme.Partner.Splash" parent="Theme.Partner.Splash.Base"/>

    <style name="Widget.Partner.Login_EditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/color_fff</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColorHint">@color/color_676975</item>
        <item name="android:background">@drawable/bg_dark_input</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Widget.Partner.Register_EditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/color_06070B</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColorHint">@color/color_A8A8A8</item>
        <item name="android:background">@drawable/bg_gray_light_input</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Widget.Partner.Login_Btn" parent="@style/Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/color_fff</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:background">@drawable/btn_login_selector</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.Partner.Share_Btn" parent="@style/Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/color_fff</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:background">@drawable/btn_login_selector</item>
        <item name="android:gravity">center</item>
    </style>

